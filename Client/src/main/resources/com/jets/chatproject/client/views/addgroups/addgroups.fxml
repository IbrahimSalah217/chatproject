<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Pane layoutX="-1.0" prefHeight="400.0" prefWidth="304.0" style="-fx-background-color: black;">
         <children>
            <TextField fx:id="groupNameTxt" layoutX="22.0" layoutY="296.0" prefHeight="33.0" prefWidth="261.0" promptText="Enter group name" />
            <Button fx:id="chossePicBtn" layoutX="25.0" layoutY="165.0" mnemonicParsing="false" onAction="#choosePicAction" prefHeight="33.0" prefWidth="115.0" text="choose Pic">
               <font>
                  <Font name="Algerian" size="15.0" />
               </font>
            </Button>
            <ImageView fx:id="groupImg" fitHeight="115.0" fitWidth="122.0" layoutX="25.0" layoutY="29.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/addgroup2.png" />
               </image>
            </ImageView>
            <TextField fx:id="memberTxtField" layoutX="24.0" layoutY="230.0" prefHeight="25.0" prefWidth="183.0" promptText="new member phone" />
            <ImageView fx:id="addMemberBtn" fitHeight="25.0" fitWidth="31.0" layoutX="258.0" layoutY="230.0" onMousePressed="#addMemberAction" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/add.png" />
               </image>
            </ImageView>
            <ImageView fx:id="removeMemberBtn" fitHeight="25.0" fitWidth="25.0" layoutX="221.0" layoutY="230.0" onMousePressed="#removeMemberAction" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/add2.png" />
               </image>
            </ImageView>
            <ImageView fx:id="submitView" fitHeight="51.0" fitWidth="54.0" layoutX="245.0" layoutY="4.0" onMousePressed="#SubmitAction" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/Contract-512.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
      <Pane layoutX="303.0" prefHeight="400.0" prefWidth="297.0" style="-fx-background-color: green;">
         <children>
            <ListView fx:id="membersList" prefHeight="400.0" prefWidth="297.0" />
         </children>
      </Pane>
   </children>
</AnchorPane>
